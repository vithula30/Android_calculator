<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#222222"
        android:textColor="#00FF00"
        android:textSize="60sp"
        android:gravity="center|end"
        android:padding="20dp"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:stretchColumns="*">

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btn7" android:text="7" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btn8" android:text="8" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btn9" android:text="9" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btnDiv" android:text="รท" android:backgroundTint="#FF9800" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btn4" android:text="4" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btn5" android:text="5" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btn6" android:text="6" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btnMult" android:text="ร" android:backgroundTint="#FF9800" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btn1" android:text="1" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btn2" android:text="2" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btn3" android:text="3" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btnMinus" android:text="-" android:backgroundTint="#FF9800" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button android:id="@+id/btnClear" android:text="C" android:backgroundTint="#F44336" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btn0" android:text="0" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btnEqual" android:text="=" android:backgroundTint="#4CAF50" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
            <Button android:id="@+id/btnPlus" android:text="+" android:backgroundTint="#FF9800" android:textSize="34sp" android:layout_height="match_parent" android:layout_margin="4dp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>
